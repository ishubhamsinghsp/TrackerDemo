<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
    >

        <androidx.appcompat.widget.AppCompatButton android:id="@+id/bt_start"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="10dp"
                                                   android:text="Start tracking"
        />

        <androidx.appcompat.widget.AppCompatButton android:id="@+id/bt_event"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="10dp"
                                                   android:text="View events"
        />

        <androidx.appcompat.widget.AppCompatButton android:id="@+id/bt_trips"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="10dp"
                                                   android:text="View Trips"
        />

    </LinearLayout>
</layout>
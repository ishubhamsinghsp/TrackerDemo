<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
    >
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_trips"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   tools:listitem="@layout/layout_item_event"
        />

        <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:text="No Trips"
                                                     android:textAlignment="center"
                                                     android:textSize="24sp"
                                                     android:layout_margin="20dp"
                                                     android:textStyle="bold"
                                                     android:id="@+id/tv_empty"
                                                     android:visibility="gone"
        />

    </LinearLayout>

</layout>